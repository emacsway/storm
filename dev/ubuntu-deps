#!/bin/bash -eu

function apt_get() {
    sudo DEBIAN_FRONTEND=noninteractive apt-get \
        -y -o Dpkg::Options::='--force-confold' $*
}

apt_get install --no-install-recommends \
    build-essential \
    libmysqlclient-dev \
    libpq-dev \
    mysql-server \
    pgbouncer \
    postgresql \
    python-dev \
    python-fixtures \
    python-mysqldb \
    python-psycopg2 \
    python-setuptools \
    python-six \
    python-testresources \
    python-transaction \
    python-twisted \
    python-zope.component \
    python-zope.security \
    tox


echo " * All Done!"
